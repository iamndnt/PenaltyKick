<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgs"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/pos2"
        android:layout_width="152dp"
        android:layout_height="122dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="67dp"
        app:layout_constraintBottom_toTopOf="@+id/res"
        app:layout_constraintEnd_toStartOf="@+id/pos3"
        app:layout_constraintStart_toEndOf="@+id/pos1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gk" />

    <ImageView
        android:id="@+id/pos1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="133dp"
        android:layout_marginEnd="18dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/pos2"
        app:layout_constraintEnd_toStartOf="@+id/pos2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pos2"
        app:srcCompat="@drawable/gk" />

    <ImageView
        android:id="@+id/pos3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="128dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/pos2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pos2"
        app:layout_constraintTop_toTopOf="@+id/pos2"
        app:srcCompat="@drawable/gk" />

    <ImageView
        android:id="@+id/ball"
        android:layout_width="79dp"
        android:layout_height="67dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/res"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ball" />

    <ImageView
        android:id="@+id/ball2"
        android:layout_width="79dp"
        android:layout_height="67dp"
        android:layout_marginBottom="16dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/res"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ball" />

    <TextView
        android:id="@+id/res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/font"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="@+id/ball"
        app:layout_constraintTop_toBottomOf="@+id/pos2" />

    <Button
        android:id="@+id/btnaga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="121dp"
        android:backgroundTint="#4CAF50"
        android:text="Again"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="152dp"
        android:layout_height="122dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/pos1"
        app:layout_constraintTop_toBottomOf="@+id/pos1" />

</androidx.constraintlayout.widget.ConstraintLayout>